<div id="{{dialogId}}" class="reveal full" data-reveal>
  <div class="row text-center">
    <div class="large-12 columns">
      <h5 class="subheader" id="guacamole_dialog">
        {{tr "Guacamole"}}
        <span id="guac_status">{{tr "Loading"}}</span>
        <span id="guacamole_buttons" class="right">
          <button class="button" id="open_in_a_new_window" href="" target="_blank" title="{{tr "Open in a new window"}}">
            <i class="fas fa-external-link-alt detach-vnc-icon"/>
          </button>
          <button class="button secondary" id="closeGuacamole" aria-label="{{tr "Close modal"}}" type="button" title="Close Guacamole">
            <i class="fas fa-times-circle"></i>
          </button>
        </span>
      </h5>
    </div>
  </div>
  <div class="reveal-body text-center" style="width:100%; overflow-x:auto">
    <iframe id="iframe-{{dialogId}}" src="{{url}}" width="100%" height="100%" frameborder="0"></iframe>
  </div>
</div>